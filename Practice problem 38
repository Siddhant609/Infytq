#PF-Prac-38
def build_index_grid(rows, columns):
    result_list = []
    for i in range(0,rows):
        sample = []
        for j in range(0,columns):
            s = str(i)+" "+str(j)
            s = s.replace(" ", ",")
            sample.append(s)
        result_list.append(sample)
             
    return result_list

rows=4
columns=3
result=build_index_grid(rows,columns)
print("Rows:",rows,"Columns:",columns)
print("The matrix is:",result)
for i in result:
    print(i)

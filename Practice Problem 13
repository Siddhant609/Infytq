#PF-Prac-13
def close_number(num1,num2,num3):
    flag = False
    diff1 = abs(num1 - num2)
    diff2 = abs(num1 - num3)
    diff3 = abs(num2 - num3)
    if diff1 < 2 and (diff3>=2 and diff2>=2):
        flag = True
    if diff2 < 2 and (diff3>=2 and diff1>=2):
        flag = True
    if diff3 < 2 and (diff2>=2 and diff1>=2):
        flag = True
    return flag
print(close_number(5,8,6))
